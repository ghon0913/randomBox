<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mybatis.CartMapper">

		<!-- 장바구니 리스트 -->
       <select id="cartList" resultType="CartDTO" parameterType="String">
              select num, userid, gCode, gName, gPrice, gImage
              from cart
              where userid = #{userid}
              order by num desc
       </select>
       
       <!-- 장바구니 개별 삭제 -->
       <delete id="delCart" parameterType="int">
       		delete from cart
       		where num = #{num}
       </delete>
	
	   <!-- 장바구니 전체 삭제 -->
	   <delete id="delAllCart" parameterType="List">
       		delete from cart
       		<where>
       			num In
       			<foreach collection="list" index="index" item="item" open="(" separator="," close=")">
       				#{item}
       			</foreach>
       		</where>
       </delete>
       
		<!-- 장바구니 개병 주문 -->
		<select id="orderConfirm" resultType="CartDTO" parameterType="int">
			select num, userid, gCode, gName, gPrice, gImage
			from cart
			where num = #{num}
		</select>
</mapper>